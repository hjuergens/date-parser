grammar SimpleCalc;

/*------------------------------------------------------------------
 * PARSER RULES
 *------------------------------------------------------------------*/

expr    : term ( ( PLUS | MINUS )  term )* ;

term    : factor ( ( MULT | DIV ) factor )* ;

factor  : NUMBER ;


/*------------------------------------------------------------------
 * LEXER RULES
 *------------------------------------------------------------------*/

NUMBER  : (DIGIT)+ ;

WHITESPACE : ( '\t' | ' ' | '\r' | '\n'| '\u000C' )+ {skip();};

    PLUS    : '+' ;
    MINUS   : '-' ;
    MULT    : '*' ;
    DIV : '/' ;

fragment DIGIT  : '0'..'9' ;
